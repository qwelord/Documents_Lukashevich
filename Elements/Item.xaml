<UserControl x:Class="Documents_Lukashevich.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="780"
             MinHeight="150" MinWidth="780">

    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="img" Source="/Documents_Lukashevich;component/Image/icon-black.png" Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="lName" Content="Наименование" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
                <Label x:Name="lDate" Content="Дата поступления: 00.00.0000" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"/>

                <Label x:Name="lUser" Content="Ответственный: Иванов И.И." Grid.Row="1" Grid.Column="0"/>
                <Label x:Name="lStatus" Content="Статус: Входящий" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>

                <Label x:Name="lCode" Content="Код документа: 000-000" Grid.Row="2" Grid.Column="0"/>
                <Label x:Name="lDirect" Content="Направление: Строительство" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>

                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Изменить" Width="100" Height="25" Margin="5,0,0,0" Click="EditDocument"/>
                    <Button Content="Удалить" Width="100" Height="25" Margin="5,0,0,0" Click="DeleteDocument"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
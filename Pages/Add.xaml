<Page x:Class="Documents_Lukashevich.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      MinHeight="600" MinWidth="900"
      Title="Add">

    <Grid Background="#FFEFEFEF">
        <Grid Background="#FFBFBFBF" Height="75" VerticalAlignment="Top">
            <Label Content="Добавить документ" FontSize="26" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Button Content="Вернуться" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Top" Click="Back"/>
        </Grid>

        <Image x:Name="src" Source="/Documents_Lukashevich;component/Image/icon-black.png" Width="100" Height="100" HorizontalAlignment="Left" Margin="10,104,0,396"/>
        <Button Content="Выбрать" Width="100" Height="30" HorizontalAlignment="Left" Margin="10,212,0,358" Click="SelectImage"/>

        <StackPanel Margin="120,90,10,10">
            <Label Content="Укажите наименование:"/>
            <TextBox x:Name="tb_name" Height="25" Margin="0,5,0,10"/>

            <Label Content="Укажите ответственного:"/>
            <TextBox x:Name="tb_user" Height="25" Margin="0,5,0,10"/>

            <Label Content="Укажите код документа:"/>
            <TextBox x:Name="tb_id" Height="25" Margin="0,5,0,10"/>

            <Label Content="Укажите дату поступления:"/>
            <TextBox x:Name="tb_date" Height="25" Margin="0,5,0,10"/>

            <Label Content="Укажите статус:"/>
            <ComboBox x:Name="tb_status" Height="25" Margin="0,5,0,10">
                <ComboBoxItem>
                    <TextBlock Text="Входящий"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock Text="Исходящий"/>
                </ComboBoxItem>
            </ComboBox>

            <Label Content="Направление:"/>
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tb_vector" Height="25" Margin="0,0,5,0" Grid.Column="0"/>
                <Button x:Name="btnAdd" Content="Сохранить" Width="100" Height="25" Grid.Column="1" Click="AddDocument"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
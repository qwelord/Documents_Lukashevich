<Page x:Class="Documents_Lukashevich.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#FFEFEFEF">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFBFBFBF">
            <Image Source="/Documents_Lukashevich;component/Image/icon-black.png" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Label Content="Учёт входящих и исходящих документов" FontSize="26" VerticalAlignment="Center" Margin="60,0,0,0"/>
            <Button Content="Выйти" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Click="Exit"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
            <Button Content="Добавить" Width="100" Height="30" Margin="5,0,0,0" Click="AddDocuments"/>
            <Button Content="Ответственные" Width="100" Height="30" Margin="5,0,0,0" Click="ManageResponsibles"/>
        </StackPanel>
    </Grid>
</Page>
<Page x:Class="Documents_Lukashevich.Pages.Responsibles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Responsibles" Height="300" Width="750" MinHeight="300" MinWidth="750">
    <Grid Background="#FFEFEFEF">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#FFBFBFBF" Grid.Row="0">
            <Label Content="Управление ответственными" FontSize="26" FontWeight="Bold" VerticalAlignment="Center" Margin="60,0,0,0"/>
            <Image Source="/Documents_Lukashevich;component/Image/icon-black.png" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
            <Button Content="Назад" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,120,0" VerticalAlignment="Center" Click="Back"/>
            <Button Content="Добавить" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Click="AddResponsible"/>
        </Grid>

        <DataGrid x:Name="dgResponsibles" Grid.Row="1" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код" Binding="{Binding Код}" Width="50"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding ФИО}" Width="*"/>
                <DataGridTemplateColumn Header="Действия" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Изменить" Margin="2" Click="EditResponsible"/>
                                <Button Content="Удалить" Margin="2" Click="DeleteResponsible"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>